<Window x:Class="WpfApp27.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ДЕЙСТВИЯ С ЗАДАЧАМИ" Height="300" Width="400" Background="#FFE4DCBF">
    <Grid>
        <StackPanel Margin="10" Background="#FFC0D5E6">
            <TextBox Name="TaskTitleTextBox" Margin="0,0,0,10" Height="30" Width="384"/>
            <TextBox Name="TaskDescriptionTextBox" Margin="0,0,0,10"/>
            <DatePicker Name="TaskDueDatePicker" Margin="0,0,0,10"/>
            <ComboBox Name="TaskPriorityComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
            </ComboBox>
            <CheckBox Name="TaskCompletedCheckBox" Content="Задача завершена" Margin="0,0,0,10" Background="Red" BorderBrush="Black" Checked="TaskCompletedCheckBox_Checked" FontWeight="Bold"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#FF69CC73" FontWeight="Bold" FontFamily="Bahnschrift SemiBold Condensed" FontSize="20" BorderBrush="Black" Foreground="White" Height="34" />
        </StackPanel>
    </Grid>
</Window>
